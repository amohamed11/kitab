{{ define "home/index.tmpl" }}
{{ template "shared/header.tmpl" .}}
{{ template "shared/navbar.tmpl" .}}

  <div class="notes-list">
    {{ if gt .count 0 }}
      <ol>
        {{ range $_, $note := .notes }}
          {{ if $note }}
            <li>
              <p>
                <a href="/notes/{{ $note.ID }}">{{ $note.Title }}</a>
                {{ range $note.Tags }}
                  #{{ .Name }}
                {{ end }}
              </p>
            </li>
          {{ end }}
        {{ end }}
      </ol>
    {{ else }}
      <p>Nothing of note yet :)</p>
    {{ end }}
  </div>


{{ template "shared/footer.tmpl" .}}

{{ end }}